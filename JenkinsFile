pipeline {
    agent any
    stages {
    
        stage ('1. Run Load Test using Taurus') {
            steps {
                echo 'Starting test with Taurus'
                echo "duration, ${duration}, users, ${users}, rampUp, ${rampUp}."
                sh 'bzt stuff.yml         \
                    -o execution.0.ramp-up=%2%      \
                      -o execution.0.concurrency=%6%   \
                      -o execution.0.hold-for=%100%   \
                      -report'
                echo 'Test completed'
            }
        }
    }
}
