pipeline {
    agent any
    stages {
    
        stage ('1. Run Load Test using Taurus') {
            steps {
                echo 'Starting test with Taurus'
                bat 'stuff.yml         \
                      -o execution.0.concurrency=%users%   \
                      -o execution.0.hold-for=%duration%   \
                      -report'
                echo 'Test completed'
            }
        }
    }
}
